{% extends 'layout.html.twig' %}
{% block title 'Connexion' %}
{% block nav %}
    <div style="float: left">
        <img class="d-none d-md-block" src="{{ asset('images/logo.jpg') }}" style="width: auto; height: 100px" id="logo"></a>
    </div>
    <div style="float: left">
        <img class="d-block d-md-none" src="{{ asset('images/logo.jpg') }}" style="width: auto; height: 70px" id="logo"></a>
    </div>
{% endblock %}
{% block main %}
<div style="margin-top: 100px">
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" >
            <div class="form-group">
                <label for="pseudo">Identifiant:</label>
                <input type="text" id="pseudo" name="_pseudo" class="form-control" value="{{ last_username }}" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>
            <div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary float">Connexion</button>
            <input class="ml-4" type="checkbox" id="remember_me" name="_remember_me" checked/>
            <label for="remember_me">Se souvenir de moi</label>
{#            <a class="ml-4" href="#">Mot de passe oubli√©</a>#}
            </div>
        </form>
    </div>
</div>
{% endblock %}
