{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block main %}
    <div class="container mt-4">

        <h3 class="text-center">Gérer les villes</h3>

        <div>
            <h4>Filtrer les villes</h4>
            <div class="row">
                <div class="m-4">Le nom contient:</div>
                <form>
                    <div>
                        <input type="search" id="maRecherche" class="mt-4">
                        <button id="btn-maRecherche" class="mt-4">Rechercher</button>
                    </div>
                </form>

            </div>

        </div>

        <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm">
            <thead>
            <tr>
                <th class="th-sm">Ville</th>
                <th class="th-sm">Code postal</th>
                <th class="th-sm">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <a href="{{ path('ville_edit', {'id': ville.id}) }}">Modifier</a>
                        <a href="{{ path('ville_delete', {'id': ville.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            <tr>
                <td>
                    <input type="text" id="add-campus">
                </td>
                <td>
                    <input type="text" id="add-campus">
                </td>
                <td>
                    <a href="{{ path('ville_index') }}" class="btn btn-secondary">Ajouter</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}