{% extends 'base.html.twig' %}

{% block title %}Gérer les campus{% endblock %}

{% block main %}

    <div class="container mt-4">

        <h3 class="text-center">Gérer les campus</h3>

        <div>
            <h4>Filtrer les sites</h4>
            <div class="row">
                <div class="m-4">Le nom contient:</div>
                <form>
                    <div>
                        <input type="search" id="maRecherche" class="mt-4">
                        <button id="btn-maRecherche" class="mt-4">Rechercher</button>
                    </div>
                </form>

            </div>

        </div>
        <div>
            <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm">
                <thead>
                <tr>
                    <th class="th-sm">Campus</th>
                    <th class="th-sm">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for campu in campuses %}
                    <tr>
                        <td>{{ campu.nom }}</td>
                        <td>
                            <a href="{{ path('campus_edit', {'id': campu.id}) }}" class="btn btn-secondary">Modifier</a>
                            <a href="{{ path('campus_delete', {'id': campu.id}) }}" class="btn btn-secondary">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td>
                        <input type="text" id="add-campus">
                    </td>
                    <td>
                        <a href="{{ path('campus_new') }}" class="btn btn-secondary">Ajouter</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}