{% extends 'layout.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block main %}
    <h3 class="m-4">Afficher une sortie</h3>

    <div>
        <div class="table">
            <table class="table table-striped table-bordered fixed-center row-cols md-6">
                <tbody>
                <tr>
                    <td>Nom de la sortie:</td>
                    <td>{{ sortie.nom }}</td>
                    <td>Campus:</td>
                    <td>{{ sortie.campus }}</td>
                </tr>
                <tr>
                    <td>Date et heure de la sortie:</td>
                    <td>{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i') : '' }}</td>
                    <td>Lieu:</td>
                    <td>{{ sortie.lieu }}</td>
                </tr>
                <tr>
                    <td>Date limite d'inscription:</td>
                    <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i') : '' }}</td>
                    <td>Rue:</td>
                    <td>{{ " " }}</td>
                </tr>
                <tr>
                    <td>Nombre de places:</td>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                    <td>Code postal:</td>
                    <td>{{ " " }}</td>
                </tr>
                <tr>
                    <td>Duree:</td>
                    <td>{{ sortie.duree }} minutes</td>
                    <td>Latitude:</td>
                    <td>{{ " " }}</td>
                </tr>
                <tr>
                    <td>Description et infos:</td>
                    <td>{{ sortie.descriptionInfos }}</td>
                    <td>Longitude:</td>
                    <td>{{ " " }}</td>
                </tr>
                <tr>
                    <td>UrlPhoto</td>
                    <td>{{ sortie.urlPhoto }}</td>
                </tr>
                </tbody>
            </table>
            <div >
            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-secondary m-4">S'inscrire</a>
            <a href="{{ path('sortie_index') }}" class="btn btn-secondary m-4">Retourner</a>
            </div>
        </div>
    </div>
{% endblock %}
