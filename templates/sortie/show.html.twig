{% extends 'layout.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block main %}
    <h3 class="m-4">Afficher une sortie</h3>

    <div>
        <div class="row">
            <table class="table table-striped table-bordered fixed-center row-cols m-4">
                <tbody>
                <tr class="col-6">
                    <td class="sortir-attribut">Nom de la sortie:</td>
                    <td>{{ sortie.nom }}</td>
                    <td class="sortir-attribut">Campus:</td>
                    <td>{{ sortie.campus }}</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Date et heure de la sortie:</td>
                    <td>{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i') : '' }}</td>
                    <td class="sortir-attribut">Lieu:</td>
                    <td>{{ sortie.lieu }}</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Date limite d'inscription:</td>
                    <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i') : '' }}</td>
                    <td class="sortir-attribut">Rue:</td>
                    <td>***</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Nombre de places:</td>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                    <td class="sortir-attribut">Code postal:</td>
                    <td>***</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Duree:</td>
                    <td>{{ sortie.duree }} minutes</td>
                    <td class="sortir-attribut">Latitude:</td>
                    <td>***</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Description et infos:</td>
                    <td>{{ sortie.descriptionInfos }}</td>
                    <td class="sortir-attribut">Longitude:</td>
                    <td>***</td>
                </tr>
                <tr class="col-6">
                    <td class="sortir-attribut">Photo:</td>
                    <td id="photoURL"><a href="{{ sortie.urlPhoto }}">Voir la photo</a></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="row justify-content-center">
            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-secondary mr-4">S'inscrire</a>
            <a href="{{ path('sortie_index') }}" class="btn btn-secondary">Retourner</a>
        </div>
    </div>

{% endblock %}
